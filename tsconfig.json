{
    "compilerOptions": {
        "sourceMap": true,
        "lib": [
            "esnext"
        ],
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
    },
    "include": [
        "src/**/*",
        "src/index.ts"
    ],
}