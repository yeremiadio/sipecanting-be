{
    "compilerOptions": {
        "sourceMap": true,
        "lib": [
            "esnext"
        ],
        "target": "ES2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*", "src/types/*"],
            "@/*": [
                "*"
            ],
        },
    },
    "include": [
        "src/**/*"
, "src/index.ts"    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}